{
    "manifest_version": 2,
    "name": "QR Code with Logo Generator",
    "version": "2.4",
    "description": "Create and customise a QR Code for the current tab or window",
    "homepage_url": "https://github.com/fmoncomble/QR_code_logo_generator",
    "permissions": [
        "activeTab",
        "storage",
        "downloads",
        "<all_urls>"
    ],
    "icons": {
    	"48": "icons/icon-48.png",
    	"96": "icons/icon-96.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-32.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
